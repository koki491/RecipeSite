CREATE TABLE users(id  INT PRIMARY KEY AUTO_INCREMENT, username VARCHAR(20));
CREATE TABLE recipes(id INT PRIMARY KEY AUTO_INCREMENT, user_id INT, cooking_name VARCHAR(50), cooking_image MEDIUMBLOB, large_category_id INT);
CREATE TABLE large_category(id INT PRIMARY KEY AUTO_INCREMENT, category_name VARCHAR(10));
CREATE TABLE small_category(id INT PRIMARY KEY AUTO_INCREMENT, category_name VARCHAR(10), large_category_id INT);

